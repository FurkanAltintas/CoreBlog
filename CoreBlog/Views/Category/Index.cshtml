@using EntityLayer.Concrete
@model List<Category>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Kategori Adı</th>
            <th>Durumu</th>
            <th>Detaylar</th>
            <th>Sil</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.Name</td>
                <td>@item.IsActive</td>
                <td><a class="btn btn-primary" href="/Category/Detaylar/@item.CategoryId">Detaylar</a></td>
                <td><a class="btn btn-danger" href="/Category/Sil/@item.CategoryId">Sil</a></td>
            </tr>
        }
    </table>
</div>