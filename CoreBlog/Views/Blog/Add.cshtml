@model EntityLayer.Concrete.Blog

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

@using (Html.BeginForm("Add", "Blog", FormMethod.Post))
{
    <div class="form-group">
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Başlık" })
        @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Category, "Kategori Seçiniz", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.TextAreaFor(x => x.Description, 15, 0, new { @class = "form-control", placeholder = "İçerik" })
        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.TextBoxFor(x => x.Thumbnail, new { @class = "form-control", placeholder = "Thumbnail" })
    </div>

    <div class="form-group">
        @Html.TextBoxFor(x => x.Image, new { @class = "form-control", placeholder = "Görsel" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Blog Ekle</button>
    </div>
}

