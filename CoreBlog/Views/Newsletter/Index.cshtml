@model CoreBlog.Models.NewsletterById

<div class="tech-btm">
    <h4>Haber bültenimize kaydolun</h4>
    <p>Gizliliğinize saygı duyuyoruz. Asla spam yok! </p>
    @using (Html.BeginForm("Index", "Newsletter", FormMethod.Post))
    {
            @Html.HiddenFor(x=>x.BlogId)

            @Html.TextBoxFor(x=>x.Mail,new { type="email", placeholder = "Email", required="" })

            <input type="submit" value="Abone Ol">
    }
</div>