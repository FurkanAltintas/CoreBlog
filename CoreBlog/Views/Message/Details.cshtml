@model Message

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="form-group">
    <label asp-for="Subject">Mesaj Başlığı</label>
    <input asp-for="Subject" class="form-control" readonly/>
</div>

<div class="form-group">
    <label asp-for="Details">Mesaj İçeriği</label>
<textarea asp-for="Details" cols="5" rows="20" class="form-control" readonly></textarea>
</div>

<a href="@Url.Action("Inbox","Message")" class="btn btn-danger">Mesajlara Dön</a>

