@model List<Comment>

<div class="comment-top">
    <h4>Yorumlar(@Model.Count())</h4>
    @if (Model.Count() != 0)
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/weblog/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.UserName</h5>
                    <p>
                        @item.Content
                    </p>
                </div>
            </div>
        }
    }
    else
            {
                <h4 style="text-align: center;">Bu bloga ait yorum bulunmamaktadır</h4>
                <h5 style="text-align: center;">İlk yorumu sen yap</h5>
            }
</div>