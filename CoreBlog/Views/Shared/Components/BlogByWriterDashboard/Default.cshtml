@model List<Blog>

@{ 
    int i = 0;
}

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Bloglar</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Görsel </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td><img src="@item.Image" class="mr-2" alt="@item.Title" /></td>
                                    <td>@item.Title</td>
                                    <td><label class="badge badge-gradient-danger">@item.Category.Name</label></td>
                                    <td>@item.CreateDate.ToShortDateString()</td>
                                    <td>
                                        <a href="@Url.Action("Detail","Blog",new { id = item.BlogId })" class="btn btn-success btn-sm">Detaylar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>