@model List<Notification>

@{
    int count = Model.Count();
}

<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
        <i class="mdi mdi-bell-outline"></i>
        @if (count != 0)
        {
            <span class="count-symbol bg-danger"></span>
        }
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
        <h6 class="p-3 mb-0">Notifications</h6>
        @if (count != 0)
        {
            foreach (var item in Model)
            {
                <div class="dropdown-divider"></div>
                <a class="dropdown-item preview-item">
                    <div class="preview-thumbnail">
                        <div class="preview-icon @item.Color">
                            <i class="@item.Symbol"></i>
                        </div>
                    </div>
                    <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                        <h6 class="preview-subject font-weight-normal mb-1">@item.Type</h6>
                        <p class="text-gray ellipsis mb-0"> @item.Details </p>
                    </div>
                </a>
            }
        }
        else
        {
            <p>Mesaj bulunmamaktadır</p>
        }

        <div class="dropdown-divider"></div>
        @if (count != 0)
        {
            <a href=""><h6 class="p-3 mb-0 text-center">Tüm Bildirimleri Gör</h6></a>
        }
        else
        {
            <h6 class="p-3 mb-0 text-center">Bildiriminiz bulunmamaktadır</h6>

        }

    </div>
</li>